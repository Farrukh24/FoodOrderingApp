@model IEnumerable<Entities.Models.Entities.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="home-section">
    <br />
    <br />
    <br />

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6 offset-10">
                <a asp-action="InsertProduct" class="btn btn-primary">Add New Product</a>
            </div>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Price
                        </th>
                        <th class="text-md-center">
                            Changes
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Price $</td>
                            <td>
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Admin" asp-action="ProductEdit" asp-route-Id="@item.Id" class="btn btn-success mx-1 "> Update </a>
                                    <a asp-controller="Admin" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1 "> Delete </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h2 class="text-black-50 text-center">No items created yet</h2>
        }
    </div>

</div>

